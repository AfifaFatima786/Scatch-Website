<%- include('./partials/header') %>
<% var owner = typeof owner !== "undefined"?owner:false %>
<% if(owner===false) { %>
<div class="min-h-screen bg-gray-100 flex items-center justify-center py-12 px-4">
    <div class="max-w-2xl w-full bg-white shadow-lg rounded-xl p-8">
        <h2 class="text-2xl font-semibold text-gray-800 mb-6">Your Profile</h2>
        
        <div class="mb-4">
            <label class="block text-gray-600 text-sm font-medium mb-1">Name</label>
            <div class="p-3 bg-gray-100 rounded-md"><%= user.fullname %></div>
        </div>

        <div class="mb-4">
            <label class="block text-gray-600 text-sm font-medium mb-1">Email</label>
            <div class="p-3 bg-gray-100 rounded-md"><%= user.email %></div>
        </div>

        <!-- Address Form -->
        <form action="/users/updateaddress?_method=PUT" method="post" class="mb-6">
            <label class="block text-gray-600 text-sm font-medium mb-1">Address</label>
            <input type="text" name="address" value="<%= user.address || '' %>" 
                   placeholder="Enter your address"
                   class="w-full p-3 bg-gray-100 rounded-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500">
            <button type="submit" class="mt-3 px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">
                Update Address
            </button>
        </form>

        <!-- Logout -->
        <div class="flex justify-end">
            <form action="/users/logout" method="get">
                <button type="submit" class="px-6 py-2 bg-red-500 text-white rounded-md hover:bg-red-600">
                    Logout
                </button>
            </form>
        </div>
    </div>
</div>

<% } else { %>
    <div class="min-h-screen bg-gray-100 flex items-center justify-center py-12 px-4">
    <div class="max-w-2xl w-full bg-white shadow-lg rounded-xl p-8">
        <h2 class="text-2xl font-semibold text-gray-800 mb-6">Your Profile</h2>
        
        <div class="mb-4">
            <label class="block text-gray-600 text-sm font-medium mb-1">Name</label>
            <div class="p-3 bg-gray-100 rounded-md"><%= owners.fullname %></div>
        </div>

        <div class="mb-4">
            <label class="block text-gray-600 text-sm font-medium mb-1">Email</label>
            <div class="p-3 bg-gray-100 rounded-md"><%= owners.email %></div>
        </div>

        

        <!-- Logout -->
        <div class="flex justify-end">
            <form action="/owners/logout" method="get">
                <button type="submit" class="px-6 py-2 bg-red-500 text-white rounded-md hover:bg-red-600">
                    Logout
                </button>
            </form>
        </div>
    </div>
</div>
<% } %>


<%- include('./partials/footer') %>
