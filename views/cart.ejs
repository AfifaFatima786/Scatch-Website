<%- include('./partials/header') %>

<div class="w-full flex flex-wrap gap-16 p-10 justify-center items-start">
    <% user.cart.forEach(function(item) { %>
    <div class="w-[40%] rounded-md border shadow-md">
        <!-- Product Top -->
        <div class="w-full h-50 flex justify-center items-center bg-[<%= item.bgcolor %>]">
            <img class="h-[15rem]" src="data:image/jpeg;base64,<%= item.image.toString('base64') %>" alt="">
        </div>

        <!-- Product Name & Quantity -->
        <div class="w-full flex justify-between px-5 py-4 bg-[<%= item.panelcolor %>]">
            <h3 class="text-2xl"><%= item.name %></h3>
            <div class="flex items-center gap-2">
                <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"></i>
                <div class="px-2 py-1 rounded-md bg-white text-black">01</div>
                <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"></i>
            </div>
        </div>

        <!-- Net Total -->
        <div class="flex text-white items-center justify-between px-5 py-3 bg-[<%= item.textcolor %>]">
            <h4 class="text-lg">Net Total</h4>
            <h2 class="text-lg">₹<%= item.price - item.discount + 20 %></h2>
        </div>

        <!-- Price Breakdown -->
        <div class="px-5 py-5">
            <h3 class="text-xl mb-4">Price Breakdown</h3>
            <div class="flex justify-between mb-2">
                <h4>Total MRP</h4>
                <h4>₹<%= item.price %></h4>
            </div>
            <div class="flex justify-between mb-2">
                <h4>Discount on MRP</h4>
                <h4>₹<%= item.discount %></h4>
            </div>
            <div class="flex justify-between mb-2">
                <h4>Platform Fee</h4>
                <h4>₹20</h4>
            </div>
            <div class="flex justify-between mb-2">
                <h4>Shipping Fee</h4>
                <h4>FREE</h4>
            </div>
            <div class="w-full h-[1px] bg-black my-5"></div>
            <div class="flex justify-between items-center">
                <h3 class="text-xl">Total Amount</h3>
                <h3 class="font-semibold text-xl text-green-600">₹<%= item.price - item.discount + 20 %></h3>
            </div>
        </div>
    </div>
    <% }) %>
</div>

<%- include('./partials/footer') %>
